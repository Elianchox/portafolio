---
import SkillsIcon from "../../../assets/icons/SkillsIcon.astro";
import Caption from "../../Caption.astro";
import SectionContainer from "../SectionContainer.astro";

const SKILLS = [
  {
    name: "Idiomas",
    skills: [
      {
        name: "Español (Nativo)",
        icon: "https://cdn-icons-png.flaticon.com/512/197/197575.png",
        className: "bg-red-400/10 text-red-500 border border-red-500 rounded"
      },
      {
        name: "English (B1)",
        icon: "https://cdn-icons-png.flaticon.com/512/197/197374.png",
        className: "bg-blue-400/10 text-blue-500 border border-blue-500 rounded"
      },
    ]
  },
  {
    name: "Frontend",
    skills: [
      {
        name: "Vue.js",
        icon: "https://vuejs.org/images/logo.png",
        className: "bg-green-400/20 text-green-500 border border-green-400"
      },
      {
        name: "React",
        icon: "https://upload.wikimedia.org/wikipedia/commons/a/a7/React-icon.svg",
        className: "bg-cyan-400/10 text-cyan-500 border border-cyan-400"
      },
      {
        name: "Next.js",
        icon: "https://www.drupal.org/files/project-images/nextjs-icon-dark-background.png",
        className: "bg-neutral-800/20 text-neutral-900 border border-neutral-800 dark:text-foreground"
      },
      {
        name: "React Native",
        icon: "https://reactnative.dev/img/header_logo.svg",
        className: "bg-cyan-400/10 text-cyan-500 border border-cyan-400"
      },
      {
        name: "Flutter",
        icon: "https://cdn.iconscout.com/icon/free/png-512/free-flutter-logo-icon-svg-download-png-1720090.png?f=webp&w=256",
        className: "bg-blue-400/20 text-blue-500 border border-blue-400"
      },
    ]
  },
  {
    name: "Backend",
    skills: [
      {
        name: "Node.js",
        icon: "https://s3.eu-west-1.amazonaws.com/images.tutorialedge.net/images/node.png",
        className: "bg-lime-400/20 text-lime-600 border border-lime-400"
      },
      {
        name: "NestJS",
        icon: "https://nestjs.com/img/logo-small.svg",
        className: "bg-rose-400/20 text-rose-500 border border-rose-400"
      },
    ]
  },
  {
    name: "APIs",
    skills: [
      {
        name: "REST",
        icon: "https://cdn-icons-png.flaticon.com/512/1006/1006547.png",
        className: "bg-amber-400/20 text-amber-500 border border-amber-400"
      },
      {
        name: "WebSockets",
        icon: "https://cdn-icons-png.flaticon.com/512/189/189792.png",
        className: "bg-purple-400/20 text-purple-500 border border-purple-400"
      },
    ]
  },
  {
    name: "Bases de Datos",
    skills: [
      {
        name: "PostgreSQL",
        icon: "https://www.postgresql.org/media/img/about/press/elephant.png",
        className: "bg-indigo-400/20 text-indigo-500 border border-indigo-400"
      },
      {
        name: "MongoDB",
        icon: "https://images.icon-icons.com/2415/PNG/512/mongodb_plain_logo_icon_146422.png",
        className: "bg-emerald-400/20 text-emerald-500 border border-emerald-400"
      },
    ]
  },
  {
    name: "Estilos / Maquetación",
    skills: [
      {
        name: "Tailwind CSS",
        icon: "https://upload.wikimedia.org/wikipedia/commons/d/d5/Tailwind_CSS_Logo.svg",
        className: "bg-teal-400/20 text-teal-500 border border-teal-400"
      },
      {
        name: "Styled Components",
        icon: "https://avatars.githubusercontent.com/u/20658825?s=200&v=4",
        className: "bg-pink-400/20 text-pink-500 border border-pink-400"
      },
    ]
  },
];

---

<SectionContainer id="habilidades">
  <Caption>
    <SkillsIcon />
    Habilidades
  </Caption>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    {SKILLS.map((category) => (
      <div class="skill-card bg-background p-4 rounded-lg shadow-md dark:shadow-primary/20">
        <h3 class="text-lg font-semibold mb-2 text-foreground">{category.name}</h3>
        <ul class="flex flex-wrap gap-2">
          {category.skills.map((skill) => (
            <li class:list={[
              'w-fit rounded-2xl py-1 px-4 text-sm font-medium flex items-center gap-2',
              'rounded backdrop-blur-lg shadow-md',
              skill.className,
            ]}><img src={skill.icon} alt={skill.name} class="inline-block w-4 h-4 mr-1" />{skill.name}</li>
          ))}
        </ul>
      </div>
    ))}
  </div>
</SectionContainer>
