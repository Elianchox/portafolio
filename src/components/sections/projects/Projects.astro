---
import Caption from "../../Caption.astro"
import SectionContainer from "../SectionContainer.astro"
import Code from "../../../assets/icons/Code.astro";
import ProjectItem from "./ProjectItem.astro";

const PROJECTS = [
  {
    title: "Anngel - Plataforma emergencia",
    description: "Aplicación móvil tipo Uber para servicios de emergencia, permitiendo a los usuarios solicitar ayuda rápida y eficiente en situaciones críticas.",
    link: "https://anngel.mx/",
    image: "/anngel-app.png",
    tags: [
      {
        name: "React Native",
        icon: "https://upload.wikimedia.org/wikipedia/commons/thumb/a/a7/React-icon.svg/1200px-React-icon.svg.png",
        bgColor: "bg-[#61DBFB]/10"
      },
      {
        name: "React",
        icon: "https://upload.wikimedia.org/wikipedia/commons/thumb/a/a7/React-icon.svg/1200px-React-icon.svg.png",
        bgColor: "bg-[#61DBFB]/10"
      }
    ]
  },
  {
    title: "Neuse - Gestión residencial",
    description: "Plataforma de gestión residencial con aplicaciones móviles y web para residentes, vigilantes y administradores, facilitando la administración y comunicación en comunidades residenciales.",
    link: "https://www.instagram.com/neuseapp/",
    image: "/neuse_app.jpg",
    tags: [
      {
        name: "Flutter",
        icon: "https://cdn.iconscout.com/icon/free/png-512/free-flutter-logo-icon-svg-download-png-1720090.png?f=webp&w=256",
        bgColor: "bg-[#02569B]/10"
      },
      {
        name: "React",
        icon: "https://upload.wikimedia.org/wikipedia/commons/thumb/a/a7/React-icon.svg/1200px-React-icon.svg.png",
        bgColor: "bg-[#61DBFB]/10"
      }
    ]
  }
]
---

<SectionContainer id="proyectos">
  <Caption>
    <Code />
    Proyectos
  </Caption>
  <div class="flex flex-col">
    {PROJECTS.map((project, index) => (
      <div>
        <ProjectItem {...project} />
        {index < PROJECTS.length - 1 && (<hr class="my-8 border-dashed border-gray-300 dark:border-gray-700" />)}
      </div>
    ))}
  </div>
</SectionContainer>