---
import Eye from "../../../assets/icons/Eye.astro";
import Github from "../../../assets/icons/Github.astro";
import SocialPill from "../../SocialPill.astro";

interface Props {
  title: string;
  description: string;
  image: string;
  link: string;
  github?: string;
  tags?: {
    name: string;
    icon?: string;
    bgColor: string;
    colorText?: string;
  }[];
}

const { title, description, image, link, github, tags } = Astro.props;
---

<section class="text-foreground">
  <div class="flex flex-col md:flex-row gap-6 items-center md:items-start">
    <img
      src={image}
      alt={title}
      class="rounded-lg w-64 bg-background object-cover"
    />
    <div class="flex-1">
      <h3 class="text-2xl font-semibold mb-4">{title}</h3>
      {
        tags && (
          <div class="flex flex-wrap gap-2 mb-4">
            {tags.map((tag) => (
              <span
                class={`inline-flex items-center gap-2 px-2.5 py-0.5 rounded-full text-sm font-medium ${tag.bgColor} text-gray-800 dark:text-gray-200`}
              >
                {tag.icon && (
                  <img src={tag.icon} alt={tag.name} class="w-4 h-4" />
                )}
                <span class={tag.colorText}>{tag.name}</span>
              </span>
            ))}
          </div>
        )
      }
      <p class="mb-4">{description}</p>
      <div class="flex flex-wrap gap-4">
        {link && <SocialPill
          href={link}
          target="_blank"
          rel="noopener noreferrer"
          class="px-4 bg-primary text-secondary-100 hover:bg-primary/90 transition-colors"
        >
          <Eye />
          Preview
        </SocialPill>}
        {github && <SocialPill
          class={"px-4 bg-secondary-foreground text-secondary hover:bg-secondary-foreground/90 transition-colors"}
          href={github}
          target="_blank"
          rel="noopener noreferrer"
        >
          <Github />
          Code
        </SocialPill>}
      </div>
    </div>
  </div>
</section>
