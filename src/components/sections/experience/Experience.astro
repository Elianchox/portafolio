---
import Baggage from "../../../assets/icons/Baggage.astro";
import type { PortfolioConfig } from "../../../types/config";
import Caption from "../../Caption.astro";
import SectionContainer from "../SectionContainer.astro";
import ExperienceItem from "./ExperienceItem.astro";
interface Props {
  experiences: PortfolioConfig['experience']
  sectionId: PortfolioConfig['navigation']['nav']['experience']['sectionId']
}

const { experiences, sectionId } = Astro.props
---
<SectionContainer id={sectionId}>
  <Caption>
      <Baggage />
      {experiences.title}
  </Caption>
  <ol class="relative border-s border-secondary-foreground/15 dark:border-secondary-foreground/20 mx-6 sm:mx-4">
    {experiences.data.map((experience) => (
      <ExperienceItem {...experience} />
    ))}
  </ol>
</SectionContainer>
