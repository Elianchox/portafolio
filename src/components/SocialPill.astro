---
interface Props {
  class?: string;
  [prop: string]: any;
  variant?: 'primary' | 'secondary';
}
const { class: className = '', variant = 'primary', ...rest } = Astro.props;
---

<a
  {...rest}
  class:list={
    [
      'inline-flex items-center gap-2 px-3 py-1.5 rounded-full text-sm font-medium text-gray-800 dark:text-gray-200',
      'hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors',
      variant === 'primary' && 'bg-primary/90 text-primary-foreground hover:bg-primary',
      variant === 'secondary' && 'bg-secondary text-secondary-foreground hover:bg-secondary-700',
      className
    ]
  }
>
  <slot />
</a>
